{
  "name": "template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "watch:styles":"nodemon --watch src/public/sass --ext scss,sass --exec gulp watchStyles",
    "watch:assets":"nodemon --watch src/public/assets --ext jpg,jpeg,webp,png --exec gulp watchAssets",
    "watch:views":"nodemon --watch src/views --ext pug,ejs --exec gulp watchViews",
    "watch:ts":"tsc --watch",
    "tsc":"tsc",
    "watch:node":"nodemon dist/index.js",
    "all":"concurrently \"npm run watch:styles\" \"npm run watch:assets\" \"npm run watch:views\" \"npm run watch:ts\" \"npm run watch:node\"",
    "prettier:check": "prettier --check './src/**/*.{js,ts}'",
    "prettier:fix": "prettier --fix './src/**/*.{ts,js}'",
    "gulp": "gulp",
    "dev":"npm run gulp && npm run tsc && npm run all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/gulp": "^4.0.13",
    "@types/hpp": "^0.2.2",
    "@types/node": "^20.4.5",
    "del": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "sass": "^1.64.1",
    "typescript": "^5.1.6"
  }
}
